<%- include('./partials/header.ejs') %>
<style>
  table {
  width: 100%;
  border-collapse: collapse;
  border-spacing: 0px;
  border-radius: 20px;
  table-layout: fixed;
}

td {
  font-size: 1.1rem;
  padding-left: 50px;  /* Ensure the padding-left is 50px */
  word-wrap: break-word;  /* Ensure long words wrap to the next line */
  overflow-wrap: break-word; /* Same as word-wrap for newer standards */
  white-space: normal; /* Ensure text can wrap naturally */
}

td span {
  margin-right: 20px;
}

td {
  vertical-align: top; /* Aligns text to the top */
}

    

  </style>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-2">
            <%- include('./partials/sideBar.ejs',{page_name:'quiz'}) %>
        </div>
        <div class="col-sm-10">
            <!--Main Content-->
            <% if (questions.length > 0) { %>
            <div class="container mt-5">
                <h2 class="text-warning border-bottom" style="text-align: center; padding-bottom: 5px;">QUESTIONS REVIEW</h2>  
                    <table class="table shadow-lg" >
                        <tbody>
                            <% questions.forEach((mcq)=>{ %>
                            <tr>
                                <td style="color: rgb(246, 252, 252); font-size: 1.2rem; padding-left: 30px;"><%= mcq.myQuestion %> </td>
                            </tr>
                            <tr>
                                <td style="background-color: #c2c1c1; padding-left: 40px; vertical-align: top;padding-top:0px;"><span>A.</span> <%= mcq.optionA %></td>
                            </tr>
                            <tr>
                                <td style="background-color: #c2c1c1; padding-left: 40px; vertical-align: top;padding-top:0px;"><span>B.</span><%= mcq.optionB %></td>
                            </tr>
                            <tr>
                                <td style="background-color: #c2c1c1; padding-left: 40px; vertical-align: top;padding-top:0px;"><span>C.</span><%= mcq.optionC %></td>
                            </tr>
                            <tr>
                                <td style="background-color: #c2c1c1; padding-left: 40px; vertical-align: top;padding-top:0px;"><span> D.</span><%= mcq.optionD %></td>
                            </tr>
                            <tr>
                                <td style="background-color: #c2c1c1; padding-left: 40px; vertical-align: top;padding-top:0px;"><span> E.</span><%= mcq.optionE %></td>
                            </tr>
                            <tr>
                                <td style="color: rgb(246, 252, 252); font-size: 1.2rem; padding-left: 30px;"><span>Correct Answer is : </span><%= mcq.correctAnswer %> </td>
                            </tr>
                                                
                    <% }) %>
                        </tbody>
                    </table> 
            <% } %> 
                        
        </div>         
    </div>
        </div>
            </div>
                    
                    
                </div>
            </div>      
    </div>
    <%- include('./partials/footer.ejs') %>
    </div>
    </div>