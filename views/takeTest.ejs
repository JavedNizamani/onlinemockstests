<%- include('./partials/header.ejs') %>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-2">
            <%- include('./partials/sideBar.ejs',{page_name:'test'}) %>
                </div>
        <div class="col-sm-10">
            <!--Main Content-->
            <div class="container mt-5">
                <h1 class="text-warning mb-5 border-bottom">TAKE TEST</h1>
                <div class="row text-white mb-5">

                    <div class="col-sm-9">

                        <form action="/loginTest" method="post">
                            <div class="row g-3">
                                <div class="col-md-8 mt-2">
                                    
                                    <% if(email) { %>
                                        <div class="subj-div"> 
                                           <p class="mt-2">Your email is not registered, Please! </p><a href="http://localhost:3000/registration" class="btn" style="color: rgb(249, 253, 134);;">Register</a>
                                        </div>
                                      <% } %> 
                                    
                                    <div class="alignment no-baffle">
                                        <label for="email" class="admin-label">Email: </label>
                                        <input type="email" class="form-control" name="email" required>
                                    </div>  
                                </div>
                            
                        <div class="alignment no-baffle">                            
                            <button class="btn btn-primary admin-label mt-3" type="submit">GO</button>
                        </div>
                        </div>
                        </form>                  
                </div>
            </div>
        </div>
        </div>
        </div>
    </div>
    <%- include('./partials/footer.ejs') %>