<%- include('./partials/header.ejs') %>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-2">
        <%- include('./partials/sideBar.ejs',{page_name:'adminMcqs'}) %>
            </div>
        <div class="col-sm-10">
            <!--Main Content-->
            <div class="container mt-5">
                <h1 class="text-warning mb-5 border-bottom">TYPE MCQs HERE...</h1>
                <div class="row text-white mb-5">
                    <div class="col-sm-9 mb-5">
                        <form action="/adminMcqs" method="post">
                            <div class="row g-3">
                                <div class="alignment no-baffle">
                                    <label for="inputPassword" style="font-size: 1.5rem;">Q.</label><textarea cols="60" class="txt-Area" style="border-radius: 10px;" placeholder="Type question Here" name="myQuestion" required></textarea>
                                </div>
                                 </div>
                                <div class="alignment no-baffle">
                                    <label for="inputPassword" style="font-size: 1.5rem;">A.</label><input type="text" class="form-control mt-2" name="optionA" required>
                                </div>        
                                <div class="alignment no-baffle">
                                    <label for="alignment" style="font-size: 1.5rem;">B.</label><input type="text" class="form-control mt-2" name="optionB" required>
                                </div>    
                                <div class="alignment no-baffle">
                                    <label for="alignment" style="font-size: 1.5rem;">C.</label><input type="text" class="form-control mt-2" name="optionC" required>
                                </div>   
                                <div class="alignment no-baffle">
                                    <label for="inputPassword" style="font-size: 1.5rem;">D.</label><input type="text" class="form-control mt-2" name="optionD" required>
                                </div>      
                                <div class="alignment no-baffle">
                                    <label for="inputPassword" style="font-size: 1.5rem;">E.</label><input type="text" class="form-control mt-2" name="optionE" required>
                                </div>
                                <div class="alignment no-baffle">
                                    <label for="correctAnswer" style="font-size: 1.5rem;">Type Correct Option:</label><input type="text" class="mt-2 correctOption" name="correctAnswer" placeholder="Option" maxlength="1" size="10" style="text-align: center;"  onkeyup="this.value = this.value.toUpperCase();" required>
                                </div>
                                <div class="alignment no-baffle">
                                <button class=" btn btn-primary col-sm-3 mt-2" type="submit">SUBMIT</button>
                            </div>
                            
                        </form>
                    </div>
                    
                </div>
            </div>
        </div>
        </div>
        </div>
    </div>
    <%- include('./partials/footer.ejs') %>